




  <%= form_for(@user)   do |f|  %>
  <%= render 'shared/error_messages' %>
    <div >
    <%= f.label :name %>


    <%= f.text_field :name %>
    </div>
    <div >
    <%= f.label :email %> <br />
    <%= f.text_field :email %>
    </div>
    <div >
    <%= f.label :password %><br />
    <%= f.password_field :password %>
    </div>
    <div >
    <%= f.label :password_confirmation, "Confirmation" %><br />
    <%= f.password_field :password_confirmation%>
    </div>
    <div >
    <%= f.submit "Sign up", :class => 'btn'%>
    </div>
    <% end %>

